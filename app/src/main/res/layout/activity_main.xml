        android:textAlignment="center"
        android:id="@+id/uno"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:text="like a diamond"
        android:layout_gravity="center"
        android:textAlignment="center"/>



</FrameLayout>